# Application
APP_NAME=Private WinGet Repository
BASE_URL=https://repo.example.com
DEBUG=false
ENVIRONMENT=production

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=winget_repo
POSTGRES_USER=winget
POSTGRES_PASSWORD=change-this-secure-password

# S3/MinIO
S3_ENDPOINT=http://minio:9000
S3_REGION=us-east-1
S3_BUCKET=winget-installers
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_SECURE=false
S3_FORCE_PATH_STYLE=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_SEARCH_PER_MINUTE=30

# CORS
CORS_ORIGINS=https://repo.example.com,http://localhost:3000

# Updater
ALLOWLIST_PATH=/app/allow-list.json
UPDATER_INTERVAL_MINUTES=60
UPDATER_MAX_VERSIONS_PER_PACKAGE=5
UPDATER_ARCHITECTURES=x64,x86
UPDATER_INSTALLER_TYPES=exe,msi,msix

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
