# Application
APP_NAME=Private WinGet Repository
BASE_URL=https://repo.example.com
DEBUG=false
ENVIRONMENT=production

# Security
JWT_SECRET=CHANGE-THIS-TO-A-RANDOM-64-CHARACTER-STRING-MINIMUM-32-CHARS-REQUIRED-FOR-SECURITY
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=winget_repo
POSTGRES_USER=winget
POSTGRES_PASSWORD=CHANGE-THIS-TO-A-SECURE-PASSWORD

# S3/MinIO
S3_ENDPOINT=http://minio:9000
S3_REGION=us-east-1
S3_BUCKET=winget-installers
S3_ACCESS_KEY=CHANGE-THIS-ACCESS-KEY
S3_SECRET_KEY=CHANGE-THIS-SECRET-KEY-TO-SOMETHING-SECURE
S3_SECURE=false
S3_FORCE_PATH_STYLE=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_SEARCH_PER_MINUTE=30

# CORS
CORS_ORIGINS=https://repo.example.com

# Updater
ALLOWLIST_PATH=/app/allow-list.json
UPDATER_INTERVAL_MINUTES=60
UPDATER_MAX_VERSIONS_PER_PACKAGE=5
UPDATER_ARCHITECTURES=x64,x86
UPDATER_INSTALLER_TYPES=exe,msi,msix

# Service Account (for updater)
SERVICE_USERNAME=service
SERVICE_PASSWORD=CHANGE-THIS-SERVICE-PASSWORD

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Domain (for nginx)
DOMAIN=repo.example.com
